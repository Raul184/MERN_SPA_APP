{
  "name": "freaking-tours",
  "version": "1.0.0",
  "description": "Tours across Brazil",
  "engines": {
    "node": "14.2.0",
    "npm": "6.14.5"
  },
  "main": "app.js",
  "scripts": {
    "start": "node server.js",
    "client": "npm start --prefix client",
    "build": "cd client && npm run build",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start:prod": "NODE_ENV=production nodemon server.js",
    "debug": "ndb server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "author": "Raul M",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "concurrently": "^5.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^3.5.3",
    "helmet": "^3.23.2",
    "hpp": "^0.2.3",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.memoize": "^4.1.2",
    "mapbox-gl": "^1.11.0",
    "mongoose": "^5.9.20",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node-sass": "^4.14.1",
    "nodemailer": "^6.4.10",
    "react-stripe-checkout": "^2.6.3",
    "sharp": "^0.25.4",
    "slugify": "^1.4.2",
    "stripe": "^8.75.0",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "prettier": "^1.19.1"
  }
}
